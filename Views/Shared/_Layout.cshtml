<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoFlow</title>
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="navbar-brand">AutoFlow</a>
            <div class="navbar-menu">
                <a href="/" class="nav-link">Strona główna</a>
                <a href="/Account/Login" class="nav-link">Logowanie</a>
                <a href="/Account/Register" class="nav-link nav-link-register">Rejestracja</a>
            </div>
        </div>
    </nav>
    
    <main role="main">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
